<div
  class='shadow-lg min-h-fit rounded-md bg-gray-50 dark:bg-gray-800 md:my-10 mt-24 2xl:mx-20 md:mx-6 mx-3'
  x-data='{showLink: true}'
>

  <div class='flex items-center w-full mx-auto p-6'>
    <div class='flex-1 self-start md:w-1/2 mx-auto rounded-lg'>
      <div class='md:flex-row'>
        <div class='flex justify-between items-center'>
          <h1
            class='text-gray-800 dark:text-gray-200 text-xl md:text-4xl px-6 font-bold'
          >Create Section</h1>
          <a
            class='text-white py-3 px-4 uppercase rounded bg-blue-400 hover:bg-blue-500 shadow hover:shadow-lg font-medium transition transform hover:-translate-y-0.5 text-xs'
            href='/section'
          >Back to list <i class='fa-solid fa-list'></i></a>
        </div>
        <div class='p-6 w-full'>

          <form class='w-full' id='form' @submit.prevent=''>
            <div class='space-y-5'>
              <label class='block text-sm'>
                <span class='text-gray-700 dark:text-gray-400'>Page Name</span>
                <select
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  name='page'
                >
                  <option selected disabled>Please select an option</option>
                  {{#each data}}
                    <option value='{{this._id}}'>{{this.name}}</option>
                  {{/each}}
                </select>
              </label>
              <label class='block text-sm'>
                <span class='text-gray-700 dark:text-gray-400'>Name</span>
                <select
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  placeholder='Jane Doe'
                  name='name'
                >
                  <option selected disabled>Please select an option</option>
                  <option value='news-body'>News Body (Pattern three)</option>
                  <option value='intro-section-two'>Intro Section (Pattern Two)</option>
                  <option value='incubatees-section-two'>Incubatees Section
                    (Pattern Two)</option>
                  <option value='intro-section-one'>Intro Section (Pattern One)</option>
                  <option value='participants-section-one'>Participants Section
                    (Pattern One)</option>
                  <option value='header-section'>Header Section</option>
                  <option value='about-section'>About Section</option>
                  <option value='what-offers-section'>What Offers Section</option>
                  <option value='join-section'>Join Section</option>
                  <option value='participants-section'>Participants Section</option>
                  <option value='benefits-section'>Benefits Section</option>
                  <option value='looking-for-section'>Looking For Section</option>
                  <option value='project-body'>Project Body</option>
                  <option value='upper-footer'>Upper Footer</option>

                </select>
              </label>
              <label class='block text-sm'>
                <span class='text-gray-700 dark:text-gray-400'>Title</span>
                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  placeholder='Jane Doe'
                  name='title'
                />
              </label>

              <label class='block text-sm'>
                <span
                  class='text-gray-700 dark:text-gray-400'
                >Description</span>
                <div id='editor'></div>
                <input type='hidden' id='description' name='description' />
              </label>

              <label class='text-sm flex justify-start items-center gap-2'>
                <span class='text-gray-700 dark:text-gray-400 font-bold'>Has
                  Multiple Content</span>
                <input
                  class='text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray'
                  placeholder='Jane Doe'
                  name='is_multiple_content'
                  type='checkbox'
                />
              </label>
            </div>

            <!-- You should use a button here, as the anchor is only used for the example  -->
            <button
              class='block px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple'
            >
              Create
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

