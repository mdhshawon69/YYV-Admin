<!-- Container -->
<div class='container mx-auto h-full'>
  <div class='flex justify-center items-center self-center px-6 h-full'>
    <!-- Row -->
    <div class='w-full xl:w-3/4 lg:w-11/12 flex shadow-2xl rounded-lg'>
      <!-- Col -->
      <div
        class='w-full h-auto bg-gray-300 hidden lg:block lg:w-1/2 bg-cover rounded-l-lg'
        style="background-image: url('/img/Logo-01.png'); background-position: center; background-size: contain; background-repeat: no-repeat"
      ></div>
      <!-- Col -->
      <div class='w-full lg:w-1/2 bg-white p-5 rounded-lg lg:rounded-l-none'>
        <div class='px-8 mb-4 text-center'>
          <h3 class='pt-4 mb-2 text-2xl'>Add Your New Password</h3>
          <p class='mb-4 text-sm text-gray-700'>
            Make sure you remember this one.
          </p>
        </div>
        <form class='px-8 pt-6 pb-8 mb-4 bg-white rounded' id='reset-form'>
          <div class='mb-4'>
            <label
              class='block mb-2 text-sm font-bold text-gray-700'
              for='email'
            >
              New password
            </label>
            <input
              class='w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline'
              id='email'
              type='password'
              name='new_password'
              placeholder='Enter Your New Password'
              required
            />
          </div>
          <div class='mb-6 text-center'>
            <button
              class='w-full px-4 py-2 font-bold text-white bg-red-500 rounded-full hover:bg-red-700 focus:outline-none focus:shadow-outline'
              type='submit'
            >
              Save
            </button>
          </div>
          <hr class='mb-6 border-t' />
          <div class='text-center'>

          </div>

        </form>
      </div>
    </div>
  </div>
</div>

<script src='/js/reset-password.js' defer></script>