<div
  class='shadow-lg min-h-fit rounded-md bg-gray-50 dark:bg-gray-800 md:my-10 mt-24 2xl:mx-20 md:mx-6 mx-3'
>

  <div class='flex items-center w-full mx-auto p-6'>
    <div class='flex-1 self-start md:w-1/2 mx-auto rounded-lg'>
      <div class='md:flex-row'>
        <div class='flex justify-between items-center'>
          <h1
            class='text-gray-800 dark:text-gray-200 text-xl md:text-4xl px-6 font-bold'
          >Edit Talent</h1>
          <a
            class='text-white py-3 px-4 uppercase rounded bg-blue-400 hover:bg-blue-500 shadow hover:shadow-lg font-medium transition transform hover:-translate-y-0.5 text-xs'
            href='/blogs'
          >Back to list <i class='fa-solid fa-list'></i></a>
        </div>
        <div class='p-6 w-full'>

          <form class='w-full' id='form' @submit.prevent=''>
            <div class='space-y-5'>
              <label class='block text-sm'>
                <span class='text-gray-700 dark:text-gray-400'>Title</span>
                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  placeholder='Jane Doe'
                  name='job_title'
                  value='{{data.job_title}}'
                />
              </label>
              <label class='block text-sm'>
                <span
                  class='text-gray-700 dark:text-gray-400'
                >Description</span>
                <div name='job_description' id='job_description'></div>
                <input
                  type='hidden'
                  id='editor-content-description'
                  name='job_description'
                  value='{{data.job_description}}'
                />
              </label>

              <label class='block text-sm'>
                <span
                  class='text-gray-700 dark:text-gray-400'
                >Responsibilities</span>
                <div
                  name='job_responsibilities'
                  id='job_responsibilities'
                ></div>
                <input
                  type='hidden'
                  id='editor-content-responsibilities'
                  name='job_responsibilities'
                  value='{{data.job_responsibilities}}'
                />
              </label>

              <label class='block text-sm'>
                <span
                  class='text-gray-700 dark:text-gray-400'
                >Qualifications</span>
                <div name='job_qualifications' id='job_qualifications'></div>
                <input
                  type='hidden'
                  id='editor-content-qualifications'
                  name='qualifications'
                  value='{{data.qualifications}}'
                />
              </label>

            </div>

            <!-- You should use a button here, as the anchor is only used for the example  -->
            <button
              class='block px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple'
            >
              Update
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Initialize Quill editor -->
<script>
  let quillJobDesc = new RichTextEditor('#job_description'); const contentDesc =
  document.getElementById('editor-content-description').value;
  quillJobDesc.setHTMLCode(contentDesc);
</script>
<script>
  let quillJobResp = new RichTextEditor('#job_responsibilities'); const
  contentResp =
  document.getElementById('editor-content-responsibilities').value;
  quillJobResp.setHTMLCode(contentResp)
</script>
<script>
  let quillJobQualif = new RichTextEditor('#job_qualifications'); const
  contentQualif =
  document.getElementById('editor-content-qualifications').value;
  quillJobQualif.setHTMLCode(contentQualif);
</script>
<script src='/js/edit-talents.js' defer></script>