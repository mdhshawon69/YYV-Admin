<div
  class='shadow-lg min-h-fit rounded-md bg-gray-50 dark:bg-gray-800 md:my-10 mt-24 md:mx-20 mx-3'
>
  <div class='w-full p-6'>
    <div class='self-start w-full rounded-lg'>
      <div class='md:flex-row'>
        <div>
          <div class='flex justify-end items-center py-6 w-full'>
            <a
              class='text-white py-3 px-4 uppercase rounded bg-blue-400 hover:bg-blue-500 shadow hover:shadow-lg font-medium transition transform hover:-translate-y-0.5 text-xs'
              href='/projects'
            >Back to list <i class='fa-solid fa-list'></i></a>
          </div>
        </div>
        <div class=''>
          <div class='lg:px-6 mb-4 flex flex-col lg:gap-10 gap-5'>
            <div class='flex lg:flex-row flex-col justify-start'>
              <p class='dark:text-gray-200 font-bold lg:w-1/5'>Title:</p>
              <h1
                class='text-gray-800 dark:text-gray-200 capitalize flex-1'
              >{{data.title}}</h1>
            </div>
            <div class='flex lg:flex-row flex-col justify-start'>
              <p class='dark:text-gray-200 font-bold lg:w-1/5'>Location:</p>
              <p class='dark:text-gray-200 flex-1'>
                {{data.project_location}}</p>
            </div>
            <div class='flex lg:flex-row flex-col justify-start'>
              <p class='dark:text-gray-200 font-bold lg:w-1/5'>Project Link:</p>
              <p class='dark:text-gray-200 flex-1'>
                {{data.project_link}}</p>
            </div>
            <div class='flex lg:flex-row flex-col justify-start'>
              <p class='dark:text-gray-200 text font-bold lg:w-1/5'>Thumb Image:</p>
              <div class='flex-1'>
                <img
                  class='w-52 h-auto object-contain'
                  src='{{data.thumb_image}}'
                  alt=''
                />
              </div>
            </div>
          </div>
          <div
            class='md:p-6 w-full mt-5 dark:text-gray-200 flex lg:flex-row flex-col justify-start'
          >
            <p class='dark:text-gray-200 lg:w-1/5 font-bold'>Description:</p>
            <div class='flex-1'>
              {{{data.description}}}
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>