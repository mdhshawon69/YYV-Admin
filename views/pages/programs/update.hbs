<div
  class='shadow-lg min-h-fit rounded-md bg-gray-50 dark:bg-gray-800 md:my-10 mt-24 md:mx-20 mx-3'
>

  <div class='flex items-center w-full mx-auto p-6'>
    <div class='flex-1 self-start md:w-1/2 mx-auto rounded-lg'>
      <div class='md:flex-row'>
        <div class='flex justify-between items-center'>
          <h1
            class='text-gray-800 dark:text-gray-200 text-xl md:text-4xl px-6 font-bold'
          >Create Program</h1>
          <a
            class='text-white py-3 px-4 uppercase rounded bg-blue-400 hover:bg-blue-500 shadow hover:shadow-lg font-medium transition transform hover:-translate-y-0.5 text-xs'
            href='/programs'
          >Back to list <i class='fa-solid fa-list'></i></a>
        </div>
        <div class='p-6 w-full'>

          <form
            class='w-full'
            id='form'
            @submit.prevent=''
            enctype='multipart/form-data'
          >
            <div class='space-y-5'>
              <label class='block text-sm'>
                <span class='text-gray-700 dark:text-gray-400'>Title</span>
                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  placeholder='Jane Doe'
                  name='title'
                  value='{{data.title}}'
                />
              </label>
              <label class='block text-sm'>
                <span class='text-gray-700 dark:text-gray-400'>Thumb Image</span>
                <div class='flex justify-between gap-2'>
                  <input
                    type='file'
                    class='block w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input h-11'
                    placeholder='Jane Doe'
                    name='program_file'
                    value='{{data.thumb_image_source}}'
                  />
                  <img
                    class='md:w-52 w-20 h-auto fit-contain border dark:border-gray-200 p-3 rounded'
                    src='{{data.thumb_image}}'
                    alt=''
                  />
                </div>
              </label>
              <label class='block text-sm'>
                <span class='text-gray-700 dark:text-gray-400'>Image Source</span>
                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  placeholder='Jane Doe'
                  name='image_source'
                  value='{{data.image_source}}'
                />
              </label>

              {{! About programs Starts }}
              <div>
                <h1
                  class='text-gray-800 dark:text-gray-200 text-xl md:text-2xl font-bold mt-20'
                >About Program</h1>
              </div>
              <label class='block text-sm'>
                <span class='text-gray-700 dark:text-gray-400'>About Program
                  Title</span>
                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  placeholder='Jane Doe'
                  name='about_program_title'
                  value='{{data.about_program.about_program_title}}'
                />
              </label>
              <label class='block text-sm'>
                <span class='text-gray-700 dark:text-gray-400'>About Program
                  Description One</span>
                <div
                  name='description'
                  id='about_program_description_one'
                ></div>
                <input
                  type='hidden'
                  id='editor-content-about-one'
                  name='about_program_description_one'
                  value='{{data.about_program.about_program_description_one}}'
                />
              </label>
              <label class='block text-sm'>
                <span class='text-gray-700 dark:text-gray-400'>About Program
                  Description One</span>
                <div
                  name='description'
                  id='about_program_description_two'
                ></div>
                <input
                  type='hidden'
                  id='editor-content-about-two'
                  name='about_program_description_one'
                  value='{{data.about_program.about_program_description_one}}'
                />
              </label>
              <label class='block text-sm'>
                <span class='text-gray-700 dark:text-gray-400'>Thumb Image</span>
                <div class='flex justify-between gap-2'>
                  <input
                    type='file'
                    class='block w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input h-11'
                    placeholder='Jane Doe'
                    name='about_file'
                    value='{{data.about_program.about_program_thumb_image}}'
                  />
                  <img
                    class='md:w-52 w-20 h-auto fit-contain border dark:border-gray-200 p-3 rounded'
                    src='{{data.about_program.about_program_thumb_image}}'
                    alt=''
                  />
                </div>
              </label>
              <label class='block text-sm'>
                <span class='text-gray-700 dark:text-gray-400'>About Program
                  Image Source</span>
                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  placeholder='Jane Doe'
                  name='about_program_thumb_image_source'
                  value='{{data.about_program.image_source}}'
                />
              </label>
              {{! About programs Ends }}

            </div>

            <!-- You should use a button here, as the anchor is only used for the example  -->
            <button
              class='block px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple'
            >
              Create
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

