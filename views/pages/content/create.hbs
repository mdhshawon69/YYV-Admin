<div
  x-data="{ sections: [], selectedValue: '', }"
  class='shadow-lg min-h-fit rounded-md bg-gray-50 dark:bg-gray-800 md:my-10 mt-24 2xl:mx-20 md:mx-6 mx-3'
>
  <div class='flex items-center w-full mx-auto p-6'>
    <div class='flex-1 self-start md:w-1/2 mx-auto rounded-lg'>
      <div class='md:flex-row'>
        <div class='flex justify-between items-center'>
          <h1
            class='text-gray-800 dark:text-gray-200 text-xl md:text-4xl px-6 font-bold'
          >Create Content</h1>
          <a
            class='text-white py-3 px-4 uppercase rounded bg-blue-400 hover:bg-blue-500 shadow hover:shadow-lg font-medium transition transform hover:-translate-y-0.5 text-xs'
            href='/content'
          >Back to list <i class='fa-solid fa-list'></i></a>
        </div>
        <div class='p-6 w-full'>

          <form class='w-full' id='form' @submit.prevent=''>
            <div class='space-y-5'>
              <label class='block text-sm'>
                <span class='text-gray-700 dark:text-gray-400'>Page Name</span>
                <select
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  name='page'
                  id='pageSelect'
                >
                  <option selected disabled>Please select an option</option>
                  {{#each data}}
                    <option value='{{this._id}}'>{{this.name}}</option>
                  {{/each}}
                </select>
              </label>
              <label class='block text-sm'>
                <span class='text-gray-700 dark:text-gray-400'>Section Name</span>
                <select
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  name='section'
                  id='selectSection'
                >
                  <option selected disabled>Please select an option</option>
                </select>
              </label>

              <label class='block text-sm hide' id='title'>
                <span class='text-gray-700 dark:text-gray-400'>Title</span>
                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  placeholder='Jane Doe'
                  name='title'
                />
              </label>
              <label class='block text-sm hide' id='sub_title'>
                <span class='text-gray-700 dark:text-gray-400'>Sub-Title</span>
                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  placeholder='Jane Doe'
                  name='sub_title'
                />
              </label>
              <label class='block text-sm hide' id='description_one'>
                <span class='text-gray-700 dark:text-gray-400'>Description One</span>
                <div id='editor_one'></div>
                <input
                  type='hidden'
                  placeholder='Jane Doe'
                  name='description_one'
                  id='desc_input_one'
                />
              </label>

              <label class='block text-sm hide' id='description_two'>
                <span class='text-gray-700 dark:text-gray-400'>Description Two</span>
                <div id='editor_two'></div>
                <input
                  type='hidden'
                  placeholder='Jane Doe'
                  name='description_two'
                  id='desc_input_two'
                />
              </label>
              <label class='block text-sm hide' id='image_one'>
                <span class='text-gray-700 dark:text-gray-400'>Image One</span>
                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  type='file'
                  placeholder='Jane Doe'
                  name='image_one'
                />
              </label>

              <label class='block text-sm hide' id='image_two'>
                <span class='text-gray-700 dark:text-gray-400'>Image Two</span>
                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  type='file'
                  placeholder='Jane Doe'
                  name='image_two'
                />
              </label>
              <label class='block text-sm hide' id='image_title_one'>
                <span class='text-gray-700 dark:text-gray-400'>Image Title One</span>

                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  type='text'
                  placeholder='Jane Doe'
                  name='image_title_one'
                />
              </label>
              <label class='block text-sm hide' id='image_title_two'>
                <span class='text-gray-700 dark:text-gray-400'>Image Title Two</span>

                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  type='text'
                  placeholder='Jane Doe'
                  name='image_title_two'
                />
              </label>
              <label class='block text-sm hide' id='image_desc_one'>
                <span class='text-gray-700 dark:text-gray-400'>Image Description
                  One</span>

                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  type='text'
                  placeholder='Jane Doe'
                  name='image_desc_one'
                />
              </label>
              <label class='block text-sm hide' id='image_desc_two'>
                <span class='text-gray-700 dark:text-gray-400'>Image Description
                  Two</span>

                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  type='text'
                  placeholder='Jane Doe'
                  name='image_desc_two'
                />
              </label>
              <label class='block text-sm hide' id='link_one'>
                <span class='text-gray-700 dark:text-gray-400'>Link One</span>

                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  type='text'
                  placeholder='Jane Doe'
                  name='link_one'
                />
              </label>
              <label class='block text-sm hide' id='link_two'>
                <span class='text-gray-700 dark:text-gray-400'>Link Two</span>

                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  type='text'
                  placeholder='Jane Doe'
                  name='link_two'
                />
              </label>
              <label class='block text-sm hide' id='image_source'>
                <span class='text-gray-700 dark:text-gray-400'>Image Source</span>

                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  type='text'
                  placeholder='Jane Doe'
                  name='image_source'
                />
              </label>
              <label class='block text-sm hide' id='closing_date'>
                <span class='text-gray-700 dark:text-gray-400'>Closing Date</span>

                <input
                  class='w-full text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input'
                  type='text'
                  placeholder='Jane Doe'
                  name='closing_date'
                />
              </label>

            </div>

            <!-- You should use a button here, as the anchor is only used for the example  -->
            <button
              class='block px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple'
            >
              Create
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src='/js/create-content.js' defer></script>
<script src='/js/content-form.js' defer></script>