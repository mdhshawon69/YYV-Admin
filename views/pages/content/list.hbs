{{!-- Impact table --}}

<div
  class='shadow-lg min-h-fit rounded-md bg-gray-50 dark:bg-gray-800 md:my-10 mt-24 md:mx-20 mx-3'
>
  <div x-data='{open: false}'>
    <div class='container px-6 mx-auto mb-8'>
      <div
        class='flex lg:flex-row flex-col justify-between items-center lg:mb-0 mb-5'
      >
        <h2
          class='my-6 text-4xl font-semibold text-gray-700 dark:text-gray-200 lg:w-auto w-full'
        >
           Contents
        </h2>
        <div
          class='flex lg:flex-row flex-col justify-center items-center gap-3'
        >
          <form action='/content' method='GET' class='flex gap-3'>
            <input
              type='text'
              class='rounded px-2 dark:bg-gray-700 dark:text-gray-200'
              placeholder='Keywords'
              name='keywords'
            />
            <button
              class='text-white py-3 px-4 uppercase rounded bg-blue-400 hover:bg-blue-500 shadow hover:shadow-lg font-medium transition transform hover:-translate-y-0.5 text-xs'
              type='submit'
            >Filter
              <i class='fa-solid fa-magnifying-glass'></i></button>
          </form>
          <a
            href='/content'
            class='text-white py-3 px-4 uppercase rounded bg-blue-400 hover:bg-blue-500 shadow hover:shadow-lg font-medium transition transform hover:-translate-y-0.5 text-xs lg:w-auto w-full md:text-none text-center'
          >Reset
            <i class='fa-sharp fa-solid fa-arrow-rotate-right'></i></a>
          <a
            href='/content/create-content'
            class='text-white py-3 px-4 uppercase rounded bg-blue-400 hover:bg-blue-500 shadow hover:shadow-lg font-medium transition transform hover:-translate-y-0.5 text-xs lg:w-auto w-full md:text-none text-center'
          >Create content</a>

        </div>
      </div>

      <div class='w-full overflow-hidden rounded-lg shadow-xs'>
        <div class='w-full overflow-x-auto'>
          <table class='w-full whitespace-no-wrap'>
            <thead>
              <tr
                class='text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800'
              >

                <th class='px-4 py-3'>Section Name</th>
                <th class='px-4 py-3'>Title</th>
                <th class='px-4 py-3'>Description</th>
                <th class='px-4 py-3'>Thumb Image</th>
                <th class='px-4 py-3'>Actions</th>
              </tr>
            </thead>
            <tbody
              class='bg-white divide-y dark:divide-gray-700 dark:bg-gray-800'
            >
              {{#each row}}
                <tr class='text-gray-700 dark:text-gray-400'>
                  <td class='px-4 py-3 text-sm'>{{this.section.title}}</td>
                  <td class='px-4 py-3 text-sm'>{{this.title}}</td>
                  <td class='px-4 py-3 text-sm'>{{this.description_one}}</td>
                  <td class='px-4 py-3 text-sm'><img src={{this.thumb_image}} class="w-20 h-auto object-contain" alt=""></td>
                  <td class='px-4 py-3 text-sm space-x-2'><button id="deleteBtn"
                      
                     @click="function deleteProject() {
                  Swal.fire({
                  title: 'Are you sure?',
                  text: 'The content will be deleted permanently',
                  icon: 'warning',
                  showCancelButton: true,
                  confirmButtonColor: '#3085d6',
                  cancelButtonColor: '#d33',
                  confirmButtonText: 'Delete'
                }).then((result) => {
                  if (result.isConfirmed) {
                    fetch(`/content/{{this._id}}?section_id={{this.section._id}}`, {
                      method: 'POST',
                    }).then((response) => {if(response.ok) {
                      console.log(response)
                      Swal.fire(
                      'Successful!',
                      'Successfully deleted the content',
                      'success'
                      )
                      setTimeout(() => {
                        location.replace('/content')
                      }, 1500)
                    } else {
                      Swal.fire(
                      'An error has occurred!',
                      `Cannot delete deleted the content`,
                      'error'
                      )
                    }})
                  }
})
                } deleteProject()"
                    >
                      <i class='fa-sharp fa-solid fa-trash text-red-500'></i>
                    </button>
                    <a href='/content/edit-content?id={{this._id}}' id="editBtn"><i
              class='fa-solid fa-pen-to-square text-blue-600'
            ></i></a>
            <a href='/content/view-content?id={{this._id}}' id="viewBtn"><i class="fa-solid fa-eye text-blue-400 "></i></a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <div
          class='grid px-4 py-3 text-xs font-semibold tracking-wide text-gray-500 uppercase border-t dark:border-gray-700 bg-gray-50 sm:grid-cols-9 dark:text-gray-400 dark:bg-gray-800'
        >
          <span class='flex items-center col-span-3'>
            Showing 21-30 of
            {{users.length}}
          </span>
          <span class='col-span-2'></span>
          <!-- Pagination -->
          <span class='flex col-span-4 mt-2 sm:mt-auto sm:justify-end'>
            <nav aria-label='Table navigation'>
              <ul class='inline-flex gap-2 items-center'>
                {{#if hasPrev}}
                  <li>
                  <a href="?page={{prevPage}}&keywords={{keywords}}"
                    class='px-3 py-1 rounded-md rounded-l-lg '
                    aria-label='Previous'
                  >
                    <svg
                      aria-hidden='true'
                      class='w-4 h-4 fill-current'
                      viewBox='0 0 20 20'
                    >
                      <path
                        d='M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z'
                        clip-rule='evenodd'
                        fill-rule='evenodd'
                      ></path>
                    </svg>
                  </a>
                </li>
                {{/if}}
                {{#each pages}}
                  <li>
                    {{#if this.isActive}}
                    <a href="?page={{this.pageNumber}}"
                      class='px-3 py-1 bg-purple-600 rounded-md focus:outline-none focus:shadow-outline-purple'
                    >
                      {{this.pageNumber}}
                    </a>
                    {{else}}
                    <a href="?page={{this.pageNumber}}&keywords={{../keywords}}"
                      class='px-3 py-1 rounded-md focus:outline-none focus:shadow-outline-purple'
                    >
                      {{this.pageNumber}}
                    </a>
                  {{/if}}
                  </li>
                {{/each}}

                {{#if hasNext}}
                <li>
                  <a href="?page={{nextPage}}&keywords={{keywords}}"
                    class='px-3 py-1 rounded-md rounded-r-lg'
                    aria-label='Next'
                  >
                    <svg
                      class='w-4 h-4 fill-current'
                      aria-hidden='true'
                      viewBox='0 0 20 20'
                    >
                      <path
                        d='M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z'
                        clip-rule='evenodd'
                        fill-rule='evenodd'
                      ></path>
                    </svg>
                  </a>
                </li>
                {{/if}}
              </ul>
            </nav>
          </span>
        </div>
      </div>
    </div>

    <script>
      tippy('#deleteBtn', { content: 'Delete' }); tippy('#editBtn', {
  content: 'Edit' }); tippy('#viewBtn', {
  content: 'View' });
    </script>